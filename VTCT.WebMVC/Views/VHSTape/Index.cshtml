@model IEnumerable<VTCT.Models.VHSTapeListItem>

@{
    ViewBag.Title = "Index";
}
<div class="spacer"></div>
<div class="spacer"></div>
<h2>My VHS Tapes</h2>



@*THIS SHOWS A SUCCESS MESSAGE WHEN A VHS TAPE IS CREATED*@
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="spacer"></div>

<table class="table">
    <tr class="tableheader">
        <th>
            @Html.DisplayNameFor(model => model.VHSTapeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VHSTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VHSDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VHSGenre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CollectionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VHSTapeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VHSTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VHSDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VHSGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td class="options">
                @Html.ActionLink("Edit", "Edit", new { id = item.VHSTapeID })
                @Html.ActionLink("Details", "Details", new { id = item.VHSTapeID })
                @Html.ActionLink("Delete", "Delete", new { id = item.VHSTapeID })
            </td>
        </tr>
    }

</table>

<div class="spacer"></div>
<div class="buttons">
    @Html.ActionLink("Add New VHS", "Create", null, new { @class = "btn btn-default" })
</div>
<div class="spacer"></div>
